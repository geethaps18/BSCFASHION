datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider   = "prisma-client-js"
  engineType = "binary"
}

/**
 * =========================
 * OTP
 * =========================
 */
model OTP {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  contact   String   @unique // email OR phone
  otp       String
  expiresAt DateTime
  createdAt DateTime @default(now())
}

/**
 * =========================
 * USERS
 * =========================
 */
model User {
  id    String  @id @default(auto()) @map("_id") @db.ObjectId
  phone String?
  email String?
  name  String?

  role String @default("CUSTOMER")
  // ADMIN | SELLER | CUSTOMER

  createdAt DateTime @default(now())
  blocked   Boolean  @default(false)

  // üî• RELATIONS (THIS IS WHAT WAS MISSING)
  addresses Address[]
  ratings   Rating[]
  reviews   Review[]
  wishlists Wishlist[]
  bags      Bag[]
  account   Account?

  // business relations
  sites    Site[]
  products Product[]
  orders   Order[]
}

model Settings {
  id      String @id @default(auto()) @map("_id") @db.ObjectId
  ownerId String @unique

  storeName String
  email     String?
  phone     String?
  address   String?
  logoUrl   String?
  gstNumber String?
  razorpay  Boolean @default(false)
  cod       Boolean @default(true)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

/**
 * =========================
 * ADDRESSES
 * =========================
 */
model Address {
  id         String    @id @default(auto()) @map("_id") @db.ObjectId
  userId     String    @db.ObjectId
  name       String
  phone      String
  doorNumber String?
  landmark   String?
  type       String?
  street     String
  city       String
  state      String
  pincode    String
  email      String?
  isDefault  Boolean   @default(false)
  createdAt  DateTime  @default(now())
  updatedAt  DateTime? @updatedAt

  user User @relation(fields: [userId], references: [id])
}

/**
 * =========================
 * CATEGORY (hierarchical)
 * =========================
 */
model Category {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  slug      String   @unique
  parentId  String?  @db.ObjectId
  createdAt DateTime @default(now())

  // Self-relation (tree)
  parent   Category?  @relation("CategoryChildren", fields: [parentId], references: [id], onDelete: NoAction, onUpdate: NoAction)
  children Category[] @relation("CategoryChildren")

  products Product[] @relation("ProductToCategory")

  @@index([parentId])
}

/**
 * =========================
 * PRODUCTS
 * =========================
 */
model Product {
  id             String   @id @default(auto()) @map("_id") @db.ObjectId
  name           String?
  description    String?
  fit            String[]
  fabricCare     String[]
  features       String[]

  category       String?
  subCategory    String?
  subSubCategory String?
  brandName      String?
  images         String[]
  sizes          String[]
  rating         Float?   @default(0)
  reviewCount    Int?     @default(0)
  price          Float
  mrp            Float?
  discount       Int?
  stock          Int      @default(0)
  siteId         String?  @db.ObjectId
  sellerId       String?  @db.ObjectId
  isPlatform     Boolean  @default(false) // admin vs seller
  status         String   @default("PENDING")
  purchases      Int      @default(0)
  createdAt      DateTime @default(now())
 

  categoryId   String?   @db.ObjectId
  seller       User?     @relation(fields: [sellerId], references: [id])
  site         Site?     @relation(fields: [siteId], references: [id])
  categoryNode Category? @relation("ProductToCategory", fields: [categoryId], references: [id])

  wishlists      Wishlist[]
  bagItems       Bag[]
  orderItems     OrderItem[]
  ratings        Rating[]
  reviews        Review[]
  stockReminders StockReminder[] @relation("StockReminderRelation")


  @@index([sellerId])
  @@index([siteId])
  @@index([categoryId])
  @@index([category, subCategory, subSubCategory])
}

model StockReminder {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  userId    String
  productId String   @db.ObjectId
  createdAt DateTime @default(now())

  product Product @relation("StockReminderRelation", fields: [productId], references: [id])
}

/**
 * =========================
 * PRODUCT VARIANTS
 * =========================
 */

model Rating {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  userId    String   @db.ObjectId
  productId String   @db.ObjectId
  orderId   String?  @db.ObjectId
  rating    Float
  createdAt DateTime @default(now())

  user    User    @relation(fields: [userId], references: [id])
  product Product @relation(fields: [productId], references: [id])
  order   Order?  @relation(fields: [orderId], references: [id])

  @@unique([userId, productId])
  @@index([userId])
  @@index([productId])
  @@index([orderId])
}

model Review {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  userId    String   @db.ObjectId
  productId String   @db.ObjectId
  orderId   String?  @db.ObjectId // optional if tied to a purchase
  rating    Float // numeric rating 1-5
  comment   String?
  review    String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user    User?   @relation(fields: [userId], references: [id])
  product Product @relation(fields: [productId], references: [id])
  order   Order?  @relation(fields: [orderId], references: [id])

  @@unique([userId, productId]) // one review per user per product
  @@index([userId])
  @@index([productId])
  @@index([orderId])
}

/**
 * =========================
 * WISHLIST
 * =========================
 */
model Wishlist {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  userId    String   @db.ObjectId
  productId String   @db.ObjectId
  name      String   @default("Default")
  createdAt DateTime @default(now())

  user    User?    @relation(fields: [userId], references: [id])
  product Product? @relation(fields: [productId], references: [id])

  @@unique([userId, productId])
  @@index([userId])
  @@index([productId])
}

/**
 * =========================
 * BAG
 * =========================
 */
model Bag {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  userId    String   @db.ObjectId
  productId String   @db.ObjectId
  size      String?
  quantity  Int      @default(1)
  createdAt DateTime @default(now())

  user    User?    @relation(fields: [userId], references: [id])
  product Product? @relation(fields: [productId], references: [id])

  @@unique([userId, productId, size])
  @@index([userId])
  @@index([productId])
}

/**
 * =========================
 * ACCOUNT
 * =========================
 */
model Account {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  userId        String   @unique @db.ObjectId
  name          String?
  email         String?
  phone         String?
  bankName      String?
  accountNumber String?
  ifsc          String?
  branch        String?
  pincode       String?
  address       String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  user User @relation(fields: [userId], references: [id])
}

/**
 * =========================
 * ORDERS
 * =========================
 */
model Order {
  id               String    @id @default(auto()) @map("_id") @db.ObjectId
  userId           String?   @db.ObjectId // ‚ùå remove ?
  totalAmount      Float
  status           String    @default("PENDING")
  paymentMode      String    @default("COD")
  address          Json? // üî• FIXED: JSON instead of string
  expectedDelivery DateTime?
  upiId            String?
  cardDetails      String?
  razorpayOrderId  String?
  trackingNumber   String?
  createdAt        DateTime  @default(now())
  updatedAt        DateTime? @updatedAt

  deliveryOtp      String?
  otpGeneratedAt   DateTime?
  otpVerified      Boolean   @default(false)
  confirmedAt      DateTime?
  shippedAt        DateTime?
  outForDeliveryAt DateTime?
  deliveredAt      DateTime?

  user    User?       @relation(fields: [userId], references: [id]) // ‚ùå Remove optional
  items   OrderItem[]
  ratings Rating[]
  reviews Review[]

  @@index([userId])
}

/**
 * =========================
 * ORDER ITEMS
 * =========================
 */
model OrderItem {
  id        String  @id @default(auto()) @map("_id") @db.ObjectId
  orderId   String  @db.ObjectId
  productId String? @db.ObjectId

  name      String?
  brandName String?
  quantity  Int
  price     Float
  size      String?
  image     String?
  packed    Boolean   @default(false)
  packedAt  DateTime?

  confirmedAt DateTime?

  sellerId String? // ‚úÖ MUST BE OPTIONAL
  siteId   String? // ‚úÖ MUST BE OPTIONAL

  deliveryOtp String?
  delivered   Boolean @default(false)

  deliveryBoyId String? @db.ObjectId

  order   Order    @relation(fields: [orderId], references: [id])
  product Product? @relation(fields: [productId], references: [id])

  createdAt DateTime @default(now())
}

model Site {
  id        String  @id @default(auto()) @map("_id") @db.ObjectId
  ownerId   String  @db.ObjectId
  brandName String?
  slug      String  @unique
  template  String
  name      String
  tagline   String?
  color     String?
  section   Json?

  createdAt DateTime @default(now())

  // üî• ADD THIS
  owner User @relation(fields: [ownerId], references: [id])

  products Product[]
}
