{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,

    // IMPORTANT: strict must be OFF for Next.js route handlers
    "strict": false,

    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "jsx": "preserve",

    "types": ["node", "react", "react-dom"],

    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    },

    "typeRoots": [
      "./types",               // ðŸ‘ˆ added
      "./node_modules/@types"
    ],

    "plugins": [
      {
        "name": "next"
      }
    ]
  },

  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "types/**/*.d.ts",         // ðŸ‘ˆ added
    "utils/db.ts",
    "models/User.ts",
    "middleware.ts",
    "app/api/**/*"
  ],

  "exclude": ["node_modules"]
}
